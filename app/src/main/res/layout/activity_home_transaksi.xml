<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Pembeli.HomeTransaksiActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_container"
        android:layout_width="0dp"
        android:layout_height="658dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/bottom_nav"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <SearchView
            android:id="@+id/searchBarangHome"
            android:layout_width="0dp"
            android:layout_height="58dp"
            android:layout_marginTop="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:queryHint="Cari Barangmu"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/btnKategoriIkan"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/round_button"
            android:scaleType="fitCenter"
            android:src="@drawable/icon_09"
            android:textAlignment="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/searchBarangHome" />

        <ImageButton
            android:id="@+id/btnKategoriSayur"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/round_button"
            android:scaleType="fitCenter"
            android:src="@drawable/icon_11"
            android:textAlignment="center"
            app:layout_constraintEnd_toStartOf="@+id/btnKategoriBeras"
            app:layout_constraintStart_toEndOf="@id/btnKategoriIkan"
            app:layout_constraintTop_toBottomOf="@+id/searchBarangHome" />

        <ImageButton
            android:id="@+id/btnKategoriBeras"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="32dp"
            android:background="@drawable/round_button"
            android:scaleType="fitCenter"
            android:src="@drawable/icon_13"
            android:textAlignment="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/searchBarangHome" />

        <ImageButton
            android:id="@+id/btnKategoriBuah"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_marginTop="40dp"
            android:layout_marginStart="32dp"
            android:background="@drawable/round_button"
            android:scaleType="fitCenter"
            android:src="@drawable/icon_10"
            android:textAlignment="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnKategoriIkan" />

        <ImageButton
            android:id="@+id/btnKategoriDaging"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/round_button"
            android:scaleType="fitCenter"
            android:src="@drawable/icon_12"
            android:textAlignment="center"
            app:layout_constraintEnd_toStartOf="@+id/btnKategoriAyam"
            app:layout_constraintStart_toEndOf="@id/btnKategoriBuah"
            app:layout_constraintTop_toBottomOf="@+id/btnKategoriSayur" />

        <ImageButton
            android:id="@+id/btnKategoriAyam"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="32dp"
            android:background="@drawable/round_button"
            android:scaleType="fitCenter"
            android:src="@drawable/icon_14"
            android:textAlignment="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnKategoriBeras" />

        <TextView
            android:id="@+id/txtIkan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="54dp"
            android:text="Ikan"
            android:textColor="#000000"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnKategoriIkan" />

        <TextView
            android:id="@+id/txtIkan4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="52dp"
            android:text="Buah"
            android:textColor="#000000"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnKategoriBuah" />

        <TextView
            android:id="@+id/txtIkan2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="188dp"
            android:text="Sayur"
            android:textColor="#000000"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnKategoriSayur" />

        <TextView
            android:id="@+id/txtIkan5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="182dp"
            android:text="Daging"
            android:textColor="#000000"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnKategoriDaging" />

        <TextView
            android:id="@+id/txtIkan3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="48dp"
            android:text="Beras"
            android:textColor="#000000"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnKategoriSayur" />

        <TextView
            android:id="@+id/txtIkan6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="48dp"
            android:text="Ayam"
            android:textColor="#000000"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnKategoriAyam" />

        <TextView
            android:id="@+id/txtPenjual"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="40dp"
            android:text="List Penjual"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtIkan4" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_list_penjual"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtPenjual" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_nav"
        android:layout_width="match_parent"
        app:itemIconSize="@dimen/bottom_navigation_icon_size"
        android:layout_height="wrap_content"
        app:labelVisibilityMode="selected"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/bottom_nav" />

</androidx.constraintlayout.widget.ConstraintLayout>